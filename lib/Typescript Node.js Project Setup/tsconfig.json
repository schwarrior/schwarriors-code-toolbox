{
  "compilerOptions": {
    "baseUrl": "./",  
    "outDir": "build",
    "sourceMap": true,
    "strict": true, 
    "target": "es2020",
    "module": "commonjs",
    "lib": [
      "es5", 
      "es6"],
    "esModuleInterop": true, 
    "paths": {
      "*": [
        "types/*"
      ]
    },
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"],
    
  },
  "include": [
    "src/**/*",
    "src/**/*.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
